<div class="section">
  <a class="btn-floating btn-large waves-effect"
     href="<%= Routes.flashcards_path(@conn, :new) %>">
    <i class="material-icons">add</i>
  </a>
</div>
<div class="section">
  <div class="row">
    <%= for card <- @cards do %>
      <div class="col s6 m3">
        <%= render_card(card) %>
      </div>
    <% end %>
  </div>
</div>
